# Alpha-PM Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://alphapm:alphapm@localhost:5432/alphapm

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# POLYMARKET (Required for Polymarket trading)
# =============================================================================
# Your wallet's private key (with 0x prefix)
POLYMARKET_PRIVATE_KEY=0x...

# Funder address - required if using a proxy/magic wallet
# This is the address that holds your funds
POLYMARKET_FUNDER=0x...

# =============================================================================
# KALSHI (Optional - for Kalshi platform support)
# =============================================================================
# API Key ID from Kalshi
KALSHI_API_KEY=

# Path to your RSA private key PEM file
KALSHI_PRIVATE_KEY_PATH=

# Use demo environment for testing (true/false)
KALSHI_USE_DEMO=true

# =============================================================================
# AI - ANTHROPIC (Required for AI analyst)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...

# Daily AI budget limit in dollars
AI_DAILY_BUDGET=20.0

# =============================================================================
# TELEGRAM (Required for alerts)
# =============================================================================
# Create a bot via @BotFather and get the token
TELEGRAM_BOT_TOKEN=

# Your chat ID (send /start to @userinfobot to get it)
TELEGRAM_CHAT_ID=

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum loss allowed per day (as percentage of portfolio)
MAX_DAILY_LOSS_PCT=5

# Maximum size of a single position (as percentage of portfolio)
MAX_SINGLE_POSITION_PCT=10

# Maximum drawdown from peak (triggers halt)
MAX_DRAWDOWN_PCT=15

# Number of consecutive losses before pausing
CONSECUTIVE_LOSS_PAUSE=5

# =============================================================================
# STRATEGY ALLOCATION (percentages, must sum to 100)
# =============================================================================
ALLOCATION_AI_TRADING=40
ALLOCATION_COPY_TRADING=35
ALLOCATION_ARBITRAGE=15
ALLOCATION_CASH_RESERVE=10

# =============================================================================
# COPY TRADING
# =============================================================================
# Comma-separated list of trader addresses to copy
COPY_TRADER_ADDRESSES=

# Position size multiplier relative to copied trader
COPY_TRADE_MULTIPLIER=1.0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific strategies
ENABLE_AI_TRADING=false
ENABLE_COPY_TRADING=true
ENABLE_ARBITRAGE=false
